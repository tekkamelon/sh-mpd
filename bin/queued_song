#!/usr/bin/awk -f

# 引数として-v mpc_current="${mpc_current}"が必須
BEGIN{

	# 区切り文字を":"に指定
	FS = ":"
}

{
		
	# "current"が第2フィールドと一致すれば真
	if(mpc_current == $2){

		marker = "[Now Playing]"

		# "ID:曲名"を"ID>曲名"に置換
		sub(":" , ">")

		print "<p><button name=play value=" $0 "</button><b>" marker "</b></p>"

	}else{

		sub(":" , ">")

		print "<p><button name=play value=" $0 "</button></p>"

	}

}
