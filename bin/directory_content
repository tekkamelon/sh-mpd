#!/usr/bin/awk -f

BEGIN{

	# クラス"content"を宣言
	print "<div class=content>"

	# 閉じるボタン
	print "<p><button id=close_button onclick=location.href=/cgi-bin/album/album.cgi>close</button></p>"

}

{

	# 入力を"filename"に代入
	filename = $0

	# スペースをエンコード
	gsub(" " , "%20" , $0)

	# "value"にエンコード後,タグ内にエンコード前
	print "<p><button name=add value=", $0, ">", filename, "</button>"

	print "<a href=#top><button name=ls value="$0">⋯</button></a></p>"

}

END{

	print "</div>"

}

